@using OrganizatorUI.Models
@model MessageModell


@{
    ViewBag.Title = "ReplyMessage";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<body class="contact-page">
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="entry-header">
                        <h2 class="entry-title">Elements</h2>
                        <ul class="breadcrumbs flex align-items-center">
                            <li><a href="#">Home</a></li>
                            <li>Contact</li>
                        </ul><!-- .breadcrumbs -->
                    </div><!-- entry-header -->
                </div><!-- col-12 -->
            </div><!-- row -->
        </div><!-- container -->
    </div><!-- page-header -->
    <div class="container">
        @using (Html.BeginForm("ReplyMessage", "Contact", FormMethod.Post))
        {
            <div class="main-content">

                <div class="contact-details">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-md-6 col-lg-4 mt-5 mt-md-0">
                                <div class="contact-medium flex align-items-center">

                                    <figure class="contact-icon">
                                        <img src="~/Content/images/mail.jpg" alt="phone icon">
                                    </figure>
                                    <div class="contact-content">
                                        <div class="entry-title">
                                            E-mail
                                        </div><!-- entry-title -->
                                        <div class="entry-content">

                                        </div><!-- entry-content -->
                                    </div><!-- phone-number -->
                                </div><!-- contact-phone -->
                            </div>

                        </div><!-- row -->
                    </div>
                </div><!-- contact-details -->
                <div class="get-in-touch">
                    <div class="entry-header">
                        <div class="entry-title">

                            <h2>İletişime Geç</h2>
                        </div><!-- entry-title -->
                    </div><!-- entry-header -->

                    <div class="contact-form">
                        <div class="row">

                            <div class="col-12 col-md-6">
                                @*@Html.DropDownListFor(m =>m.Email, ViewBag.Email as List<SelectListItem>, "Lütfen Seçiniz", new { @class = "dropdown form-control" })*@
                                @*<input type="email" placeholder="email" name="Email">*@
                                <text><h2>@ViewBag.PoEmail</h2></text>
                            </div>

                            <div class="col-12">

                            </div>
                            <div class="col-12">
                                <textarea name="Message_Detail" rows="8" cols="80" placeholder="message"></textarea>
                            </div>
                            <div class="col-12 submit flex justify-content-center">
                                <input type="submit" value="Messaj Yolla" class="btn">
                            </div>
                        </div><!-- row -->
                    </div><!-- contact-form -->
                </div><!-- newsletter-subscribe -->
            </div>}<!-- main-content -->
    </div><!-- container -->
</body>

